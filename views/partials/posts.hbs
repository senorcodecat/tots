<ul class="posts">
{{#posts}}
<li>
    <div class="byline">
        <a href="/@{{user.username}}" class="username">{{user.displayName}}</a> <span class="date">{{dateFormat date "MMM Do, h:mm a"}}</span>
    </div>
    <div class="text">
        {{{text}}}
    </div>

    <ul class="actions">
        <li><a href="/actions/fave/{{_id}}">⭐️</a></li>
        <li>💬</li>
    </ul>

</li>
{{/posts}}
</ul>
